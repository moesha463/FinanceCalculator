<Window x:Class="FinanceCalculator.CreateTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceCalculator"
        mc:Ignorable="d"
        Title="Create Transaction" Height="250" Width="300" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid>
        <Button Name="createTransactionModalButton" Content="Create Transaction" HorizontalAlignment="Left" VerticalAlignment="Top" Click="createTransactionModalButton_Click" Margin="49,186,0,0"/>
        <TextBox Name="transactionNameTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" Margin="49,48,0,0"/>
        <TextBox Name="sumTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" Margin="49,95,0,0"/>
        <StackPanel Name="transactionTypePanel" VerticalAlignment="Top" Margin="49,144,74,0">
            <RadioButton Name="profitRadioButton" Content="Profit"/>
            <RadioButton Name="lesionRadioButton" Content="Lesion"/>
        </StackPanel>
        <Label Content="Transaction Name" HorizontalAlignment="Left" Margin="49,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Sum" HorizontalAlignment="Left" Margin="49,71,0,0" VerticalAlignment="Top"/>
        <Label Content="Transaction Type" HorizontalAlignment="Left" Margin="49,118,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
