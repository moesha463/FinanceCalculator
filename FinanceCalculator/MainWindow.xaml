<Window x:Class="FinanceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceCalculator"
        mc:Ignorable="d"
        Title="Finance Calculator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="transactionsDataGrid" ItemsSource="{Binding Transactions}" IsReadOnly="True"  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding transactionDate}" />
                <DataGridTextColumn Header="Name" Binding="{Binding transactionName}" />
                <DataGridTextColumn Header="Type" Binding="{Binding transactionType}" />
                <DataGridTextColumn Header="Sum" Binding="{Binding transactionSum}" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style>

                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <TextBlock Name="totalBalanceTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="92,15,0,0" TextWrapping="Wrap" Text="0,00" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="Total Balance:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <WrapPanel Grid.Row="1">
            <Button Name="newTransactionButton" Content="New Transaction" Grid.Row="1" Click="newTransactionButton_Click" Width="100"/>
            <Button Name="importFromJsonButton" Content="Import JSON" Grid.Row="1" Click="importFromJsonButton_Click" Width="100"/>
            <Button Name="exportToJsonButton" Content="Export JSON" Grid.Row="1" Click="exportToJsonButton_Click" Width="100"/>
        </WrapPanel>
    </Grid>
</Window>
